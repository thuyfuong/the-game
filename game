import os
import sys
import subprocess

# --- Проверка pygame ---
try:
    import pygame
except ModuleNotFoundError:
    print("Pygame не найден, создаём виртуальное окружение и устанавливаем...")
    
    # Путь до venv
    venv_dir = "venv"
    
    # Шаг 1: создаём виртуальное окружение
    subprocess.check_call([sys.executable, "-m", "venv", venv_dir])
    
    # Определяем путь до pip внутри venv
    if os.name == "nt":  # Windows
        pip_path = os.path.join(venv_dir, "Scripts", "pip.exe")
        python_path = os.path.join(venv_dir, "Scripts", "python.exe")
    else:  # Linux / Mac
        pip_path = os.path.join(venv_dir, "bin", "pip")
        python_path = os.path.join(venv_dir, "bin", "python")
    
    # Шаг 2: обновляем pip
    subprocess.check_call([python_path, "-m", "pip", "install", "--upgrade", "pip"])
    
    # Шаг 3: устанавливаем pygame
    subprocess.check_call([pip_path, "install", "pygame"])
    
    print("Pygame установлен, перезапустите скрипт в виртуальном окружении.")
    sys.exit(0)

# --- Игра Изгиб Питона ---
import random

SCREEN_WIDTH = 640
SCREEN_HEIGHT = 480
GRID_SIZE = 20
BOARD_BACKGROUND_COLOR = (0, 0, 0)
SNAKE_COLOR = (0, 255, 0)
APPLE_COLOR = (255, 0, 0)

class GameObject:
    """Базовый класс для объектов на игровом поле."""
    def __init__(self, position):
        self.position = position
        self.body_color = None
    def draw(self, surface):
        pass

class Apple(GameObject):
    def __init__(self):
        super().__init__((0, 0))
        self.body_color = APPLE_COLOR
        self.randomize_position()
    def randomize_position(self):
        max_x = (SCREEN_WIDTH // GRID_SIZE) - 1
        max_y = (SCREEN_HEIGHT // GRID_SIZE) - 1
        self.position = (random.randint(0, max_x) * GRID_SIZE,
                         random.randint(0, max_y) * GRID_SIZE)
    def draw(self, surface):
        pygame.draw.rect(surface, self.body_color,
                         pygame.Rect(self.position[0], self.position[1],
                                     GRID_SIZE, GRID_SIZE))

class Snake(GameObject):
    def __init__(self):
        center_x = SCREEN_WIDTH // 2
        center_y = SCREEN_HEIGHT // 2
        super().__init__((center_x, center_y))
        self.body_color = SNAKE_COLOR
        self.length = 1
        self.positions = [self.position]
        self.direction = (GRID_SIZE, 0)
        self.next_direction = None
        self.last = None
    def get_head_position(self):
        return self.positions[0]
    def update_direction(self):
        if self.next_direction:
            opposite = (-self.direction[0], -self.direction[1])
            if self.next_direction != opposite:
                self.direction = self.next_direction
        self.next_direction = None
    def move(self):
        head_x, head_y = self.get_head_position()
        dx, dy = self.direction
        new_x = (head_x + dx) % SCREEN_WIDTH
        new_y = (head_y + dy) % SCREEN_HEIGHT
        new_head = (new_x, new_y)
        if new_head in self.positions[2:]:
            self.reset()
            return
        self.positions.insert(0, new_head)
        if len(self.positions) > self.length:
            self.last = self.positions.pop()
        else:
            self.last = None
    def draw(self, surface):
        if self.last:
            pygame.draw.rect(surface, BOARD_BACKGROUND_COLOR,
                             pygame.Rect(self.last[0], self.last[1],
                                         GRID_SIZE, GRID_SIZE))
        for pos in self.positions:
            pygame.draw.rect(surface, self.body_color,
                             pygame.Rect(pos[0], pos[1],
                                         GRID_SIZE, GRID_SIZE))
    def reset(self):
        center_x = SCREEN_WIDTH // 2
        center_y = SCREEN_HEIGHT // 2
        self.length = 1
        self.positions = [(center_x, center_y)]
        self.direction = (GRID_SIZE, 0)
        self.next_direction = None
        self.last = None

def handle_keys(snake):
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            exit()
        elif event.type == pygame.KEYDOWN:
            if event.key == pygame.K_UP:
                snake.next_direction = (0, -GRID_SIZE)
            elif event.key == pygame.K_DOWN:
                snake.next_direction = (0, GRID_SIZE)
            elif event.key == pygame.K_LEFT:
                snake.next_direction = (-GRID_SIZE, 0)
            elif event.key == pygame.K_RIGHT:
                snake.next_direction = (GRID_SIZE, 0)

def main():
    pygame.init()
    screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
    pygame.display.set_caption("Изгиб Питона")
    clock = pygame.time.Clock()

    snake = Snake()
    apple = Apple()

    while True:
        handle_keys(snake)
        snake.update_direction()
        snake.move()

        if snake.get_head_position() == apple.position:
            snake.length += 1
            apple.randomize_position()

        screen.fill(BOARD_BACKGROUND_COLOR)
        snake.draw(screen)
        apple.draw(screen)
        pygame.display.update()
        clock.tick(10)

if __name__ == "__main__":
    main()
