import pygame
import sys
import random


def draw_snake(surface, snake_blocks, block_size):
    """Рисует змею на экране."""
    for block in snake_blocks:
        pygame.draw.rect(
            surface,
            (0, 255, 0),
            (block[0], block[1], block_size, block_size)
        )


def draw_food(surface, food_pos, block_size):
    """Рисует еду на экране."""
    pygame.draw.rect(
        surface,
        (255, 0, 0),
        (food_pos[0], food_pos[1], block_size, block_size)
    )


def move_snake(direction, snake_blocks, block_size):
    """Обновляет позицию змеи в зависимости от направления движения."""
    head_x, head_y = snake_blocks[0]

    if direction == "UP":
        head_y -= block_size
    elif direction == "DOWN":
        head_y += block_size
    elif direction == "LEFT":
        head_x -= block_size
    elif direction == "RIGHT":
        head_x += block_size

    new_head = (head_x, head_y)
    snake_blocks.insert(0, new_head)
    snake_blocks.pop()

    return snake_blocks


def check_collision(snake_blocks, width, height):
    """Проверяет столкновение змеи со стеной или самой собой."""
    head = snake_blocks[0]

    if head[0] < 0 or head[0] >= width:
        return True
    if head[1] < 0 or head[1] >= height:
        return True
    if head in snake_blocks[1:]:
        return True

    return False


def spawn_food(width, height, block_size, snake_blocks):
    """Создает еду в случайной позиции, не совпадающей с телом змеи."""
    while True:
        x = random.randrange(0, width, block_size)
        y = random.randrange(0, height, block_size)
        if (x, y) not in snake_blocks:
            return (x, y)


def main():
    """Главная функция запуска игры Snake."""
    pygame.init()

    width = 600
    height = 400
    block_size = 20

    screen = pygame.display.set_mode((width, height))
    pygame.display.set_caption("Змейка — PEP8 Edition")

    clock = pygame.time.Clock()

    snake_blocks = [(100, 100), (80, 100), (60, 100)]
    direction = "RIGHT"

    food_pos = spawn_food(width, height, block_size, snake_blocks)

    score = 0
    font = pygame.font.SysFont("arial", 24)

    while True:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                sys.exit()

            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_UP and direction != "DOWN":
                    direction = "UP"
                elif event.key == pygame.K_DOWN and direction != "UP":
                    direction = "DOWN"
                elif event.key == pygame.K_LEFT and direction != "RIGHT":
                    direction = "LEFT"
                elif event.key == pygame.K_RIGHT and direction != "LEFT":
                    direction = "RIGHT"

        snake_blocks = move_snake(direction, snake_blocks, block_size)

        if check_collision(snake_blocks, width, height):
            pygame.quit()
            sys.exit()

        if snake_blocks[0] == food_pos:
            snake_blocks.append(snake_blocks[-1])
            food_pos = spawn_food(width, height, block_size, snake_blocks)
            score += 1

        screen.fill((0, 0, 0))
        draw_snake(screen, snake_blocks, block_size)
        draw_food(screen, food_pos, block_size)

        score_text = font.render(f"Счет: {score}", True, (255, 255, 255))
        screen.blit(score_text, (10, 10))

        pygame.display.update()
        clock.tick(10)


if __name__ == "__main__":
    main()
